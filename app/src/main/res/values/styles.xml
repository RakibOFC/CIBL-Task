<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MaterialCardViewStyle">
        <item name="cardCornerRadius">@dimen/_15sdp</item>
        <item name="cardElevation">1dp</item>
        <item name="strokeColor">@color/border</item>
    </style>

    <style name="AppCompatImageViewStyle">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@drawable/click_effect</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="Style.CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/_4sdp</item>
        <item name="android:padding">@dimen/_12sdp</item>
    </style>

    <style name="TransactionReceiptDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/popup_background</item>
    </style>

</resources>